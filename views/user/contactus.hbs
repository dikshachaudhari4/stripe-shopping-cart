<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 col-md-offset-4 main main-title">
        <h1>Contact Us</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <form action="/user/contactus" method="post">
           <div class="checkout">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="checkout">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="checkout">
                <label for="message">messages</label>
                <input type="text" id="message" name="message" class="form-control">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}"><br>
            <button type="submit" class="btn btn-raised btn-info main button-submit">Contact Us</button>
        </form>
    </div>
</div>
